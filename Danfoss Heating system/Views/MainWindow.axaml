<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="clr-namespace:Danfoss_Heating_system.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Width="800"
		Height="450"
        x:Class="Danfoss_Heating_system.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
		Title="Danfoss Heating System"
		Icon="/Assets/Images/DanfossLogo.ico"
		MinHeight="450"
		MinWidth="800"
		CanResize="True">


	<Grid RowDefinitions="Auto,*">
		
		<!-- Top Bar for navigation -->
		<Border Grid.Row="0" Background="Gray" Padding=" 10">

			<Grid ColumnDefinitions="Auto,*,Auto">
				
				<!-- Navigation button -->
				<Button Grid.Column="0" 
						Content="Navigatioin"/>
				
				<!-- Log out button -->
				<Button Grid.Column="2" 
						Content="Log out"
						Command="{Binding logoutCommand}"/>
				
			</Grid>
			
		</Border>

		<!-- Main content Area -->
		<ContentControl Grid.Row="1" Content="{Binding CurrentContent}"/>
	
	</Grid>



</Window>
